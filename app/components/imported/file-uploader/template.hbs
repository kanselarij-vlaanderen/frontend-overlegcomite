<div class="vl-upload__element">
  {{#file-upload
    name="files"
    for="upload-photo"
    class="vl-upload__element__label"
    multiple=multipleFiles
    onfileadd=(action "uploadFile")
  }}
    <em>
      <i class="vl-vi vl-vi-paperclip" aria-hidden="true"></i>
      <span>
        "bestand opladen"
      </span>
    </em>
    {{#file-dropzone
      name="files"
      class="vl-upload__element__button__container"
      tagName="a" as |dropzone queue|
    }}
      {{#if dropzone.active}}
        {{#if dropzone.valid}}
          <p>
            Sleep je bestanden naar hier of klik hier om bestanden te selecteren.
          </p>
        {{else}}
          <p>
            ongeldig bestandstype
          </p>
        {{/if}}
      {{else if queue.files.length}}
        <div class="progress-container">
          {{uploadedFileLength}}
          van
          {{fileQueue.files.length}}
          opgeladen
        </div>
      {{else if dropzone.supported}}
        Sleep je bestanden naar hier of klik hier om bestanden te selecteren.
      {{/if}}
    {{/file-dropzone}}
  {{/file-upload}}
</div>