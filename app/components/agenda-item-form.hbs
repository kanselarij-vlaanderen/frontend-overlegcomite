<div class="vlc-input-field-block">
  <div class="vl-grid vl-grid--is-stacked">
    <div class="vl-col--6-12">
      <div class="vlc-input-field-block">
        <Imported::WebComponents::VlFormLabel @value="Volgnummer"/>
        <div class="vl-form__input">
          <Input class="vl-input-field vl-input-field--block" @type="number" @value={{this.agendaItem.priority}}/>
        </div>
      </div>
    </div>
    <div class="vl-col--6-12">
      <div class="vlc-input-field-block">
        <Imported::WebComponents::VlFormLabel @value="Onderdeel"/>
        <div class="vl-form__input">
          <Input
            class="vl-input-field vl-input-field--block"
            placeholder="bv. b"
            @value={{this.agendaItem.subPriority}}
          />
        </div>
      </div>
    </div>
  </div>
</div>
<div class="vlc-input-field-block">
  <Imported::WebComponents::VlFormLabel @value="Dossiernummer"/>
  <div class="vl-form__input">
    <Input
      class="vl-input-field vl-input-field--block"
      placeholder="bv. 2015C80030.002"
      value={{this.caseIdentifier}}
      {{on "input" this.updateCase}}
    />
  </div>
</div>
<div class="vlc-input-field-block">
  <Imported::WebComponents::VlFormLabel @value="Indiener"/>
  <PowerSelectMultiple
    @options={{@submitterOptions}}
    @selected={{this.agendaItem.submitters}}
    @onChange={{fn (mut this.agendaItem.submitters)}}
  as |governmentBody|
  >
    {{governmentBody.name}}
  </PowerSelectMultiple>
</div>
<div class="vlc-input-field-block">
  <Imported::WebComponents::VlFormLabel @value="Titel"/>
  <Textarea
    class="vl-textarea vl-textarea--block"
    @rows="3"
    @value={{this.agendaItem.subject}}
  />
</div>