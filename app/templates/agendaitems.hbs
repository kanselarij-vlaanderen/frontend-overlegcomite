        <div class="vlc-scroll-wrapper__body">
          <div class={{if (eq agendaItemListMode "main") "vl-u-spacer-extended-l"}}>
            <div class={{if (eq agendaItemListMode "main") "vl-u-spacer-extended-bottom-l"}}>
              <Kaleidos::AgendaItemsList @mode={{agendaItemListMode}} as |itemsList|>
                {{#each (await agendaItemGroups) as |agendaItemGroup|}}

                  <itemsList.agenda-items-group @title={{format-submitter-names agendaItemGroup.firstObject.submitters}}
                  as |itemsGroup|>
                    {{#each agendaItemGroup as |agendaItem|}}
                      <Link
                        @route="agendaitems.agendaitem"
                        @model={{agendaItem}}
                      as |l|>
                        <itemsGroup.agenda-item
                          @active={{l.isActiveWithoutQueryParams}}
                          @url={{l.href}}
                          @number={{concat agendaItem.priority agendaItem.subPriority "."}}
                          @title={{agendaItem.subject}}
                          @content={{undefined}}
                          @times-passed={{agendaItem.case.identifier}}
                          {{on "click" l.transitionTo}}
                        />
                      </Link>
                    {{/each}}
                  </itemsList.agenda-items-group>
                {{/each}}
              </Kaleidos::AgendaItemsList>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="vlc-panel-layout__main-content">
      {{outlet}}
    </div>
  </div>
{{/if}}
{{#if (is-pending agendaItemGroups)}}
  {{imported/web-components/vl-loader
    text="Agenda laden ..."
  }}
{{/if}}
{{outlet "modal"}}