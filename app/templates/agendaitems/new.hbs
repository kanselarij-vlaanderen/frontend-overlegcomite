<Kaleidos::CreationModal
  @title="Agendapunt aanmaken"
  @buttonText="Aanmaken"
  @loading={{this.isLoading}}
  @onSave={{this.save}}
  @onClose={{this.cancel}}
  @onCancel={{this.cancel}}
>
  <AgendaItemForm
    @agendaItem={{this.model}}
    @onChange={{mut this.model}}
    @submitterOptions={{this.governmentBodies}}
  />
</Kaleidos::CreationModal>