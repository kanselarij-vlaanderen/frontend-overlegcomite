<Kaleidos::CreationModal
  @title="Nieuwe vergadering"
  @buttonText="Aanmaken"
  @loading={{@isLoading}}
  @onSave={{this.save}}
  @onClose={{this.cancel}}
>
  <div class="vl-modal-dialog__content">
    <div class="vl-u-spacer-extended-bottom-s">
      <div class="vlc-input-field-block">
        <Imported::WebComponents::VlFormLabel @value="Datum & Tijd"/>
        <Imported::WebComponents::VlDatepicker
          @date={{this.dateForPicker}}
          @enableTime={{true}}
          @dateChanged={{fn this.setMeetingDate}}
        />
      </div>
    </div>
  </div>
</Kaleidos::CreationModal>